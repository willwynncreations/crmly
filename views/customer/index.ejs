<% include ../partials/header %>
    <div class="container-full">
        <div class="row">
            <div class="col-md-2"><!-- Side bar -->
                <% include ../partials/sidebar %>
            </div>
            <div class="col-md-8">
                <% if(!customer){ %> 
   
                    <div class="col-md-6">
                        <form class="form form-horizontal" method="post" action="/search">
                            <div class="form-group">
                                <label for="form-control-label">Customer Search BTN:</label>
                                <input class="form-control" type="text" name="searchTerm">
                            </div>
                                <input type="submit" value="Search" class="btn btn-large btn-success">
                        </form>
                    </div>

                <% }else{ %>
                    <div class="card col-md-5">
                        <h3 class="card-title">Customer Account  Info</h3>
                        <div class="card-body">
                            <table class="table table-striped table-sm customerTable">
                                <thead class="thead-dark">
                                </thead>
                                <tbody>
                                    <tr scope="row"><th>Name</th><td><%=customer.first_name + " " + customer.last_name %></td></tr>
                                    <tr scope="row"><th>Email</th><td><%=customer.email %></td></tr>
                                    <tr scope="row"><th>Address</th><td><%=customer.address1 %></td></tr>
                                    <tr scope="row"><th>City</th><td><%=customer.city %></td></tr>
                                    <tr scope="row"><th>State</th><td><%=customer.state %></td></tr>
                                    <tr scope="row"><th>Zip</th><td><%=customer.zip  %></td></tr>
                                </tbody>
                            </table>                                            
                        </div>
                    </div>
                    <div class="card col-md-5 pull-right">
                        <h3 class="card-title">Packages</h3>
                        <div class="card-body">
                            <table class="table table-striped table-sm customerTable">
                                <thead class="thead-dark">
                                </thead>
                                <tbody>
                                    <tr scope="row"><th>Name</th><td><%=customer.first_name + " " + customer.last_name %></td></tr>
                                    <tr scope="row"><th>Email</th><td><%=customer.email %></td></tr>
                                    <tr scope="row"><th>Address</th><td><%=customer.address1 %></td></tr>
                                    <tr scope="row"><th>City</th><td><%=customer.city %></td></tr>
                                    <tr scope="row"><th>State</th><td><%=customer.state %></td></tr>
                                    <tr scope="row"><th>Zip</th><td><%=customer.zip  %></td></tr>
                                </tbody>
                            </table>                                            
                        </div>
                    </div>

                <% } %>     
            </div>
            <div class="col-md-10">
                <% if(!customer){ %>

                <% }else{ %>
                    <div>
                        <h3>Account Interactions</h3>
                    </div>            
                <% } %>
            </div>
        </div>
    </div>
<% include ../partials/footer %>